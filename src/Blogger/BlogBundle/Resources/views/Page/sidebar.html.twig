<section class="section">
    <header>
        <h3>{{ "sidebar.tag_cloud" | trans }}</h3>
    </header>
    <p class="tags">
        {% for tag, weight in tags %}
            <span class="weight-{{ weight }}">{{ tag }}</span>
        {% else %}
            <p>{{ "sidebar.there_are_no_tags" | trans }}</p>
        {% endfor %}
    </p>
</section>


<section class="section">
    <header>
        <h3>{{ "sidebar.latest_comments" | trans }}</h3>
    </header>
    {% for comment in latestComments %}
        <article class="comment">
            <header>
                <p class="small"><span class="highlight">{{ comment.user }}</span> {{ "sidebar.commented_on" | trans }}
                    <a href="{{ path('BloggerBlogBundle_blog_show', { 'id': comment.blog.id, 'slug': comment.blog.slug }) }}#comment-{{ comment.id }}">
                        {{ comment.blog.title }}
                    </a>
                    [<em><time datetime="{{ comment.created|date('c') }}">{{ comment.created|created_ago }}</time></em>]
                </p>
            </header>
            <p>{{ comment.comment }}</p>
            </p>
        </article>
    {% else %}
        <p>{{ "sidebar.there_are_no_recente_comments" | trans }}</p>
    {% endfor %}
</section>
